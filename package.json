{
  "name": "emaily",
  "version": "1.0.0",
  "main": "src/index.js",
  "author": "cszatma <cs@christopherszatmary.com>",
  "private": true,
  "dependencies": {
    "body-parser": "^1.18.2",
    "cookie-session": "^2.0.0-beta.3",
    "express": "^4.16.3",
    "mongoose": "^5.0.12",
    "passport": "^0.4.0",
    "passport-google-oauth20": "^1.0.0",
    "stripe": "^5.8.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "concurrently": "^3.5.1",
    "flow-bin": "^0.69.0",
    "nodemon": "^1.17.2",
    "prettier": "^1.11.1"
  },
  "engines": {
    "node": "8.11.1",
    "yarn": "1.5.1"
  },
  "scripts": {
    "start-server": "nodemon src/index.js --exec babel-node",
    "start-client": "yarn --cwd client run start",
    "start-dev": "concurrently \"yarn start-server\" \"yarn start-client\" --names \"Server,Client\" -c \"red,blue\"",
    "build": "babel src -d build",
    "start": "node build/index.js",
    "clean": "rm -rf build",
    "heroku-postbuild": "yarn run build",
    "prettier": "prettier --write \"src/**/*.js\"",
    "flow": "flow",
    "flow-typed-install": "flow-typed install -s -i dev"
  },
  "prettier": {
    "parser": "flow",
    "trailingComma": "all",
    "singleQuote": true,
    "tabWidth": 4
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "flow"
    ]
  }
}
