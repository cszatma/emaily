{
  "name": "emaily",
  "version": "1.0.0",
  "main": "src/index.js",
  "author": "cszatma <cs@christopherszatmary.com>",
  "private": true,
  "dependencies": {
    "body-parser": "^1.18.2",
    "cookie-session": "^2.0.0-beta.3",
    "express": "^4.16.3",
    "mongoose": "^5.0.12",
    "passport": "^0.4.0",
    "passport-google-oauth20": "^1.0.0",
    "stripe": "^5.8.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "concurrently": "^3.5.1",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.46.2",
    "eslint-plugin-prettier": "^2.6.0",
    "flow-bin": "^0.69.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "jest-supertest-cookie-fix": "^1.0.0",
    "lint-staged": "^7.0.4",
    "mockgoose": "^7.3.5",
    "nodemon": "^1.17.2",
    "passport-mock-strategy": "^1.0.0",
    "prettier": "^1.11.1",
    "superagent": "^3.8.2",
    "supertest": "^3.0.0"
  },
  "engines": {
    "node": "8.11.1",
    "yarn": "1.5.1"
  },
  "scripts": {
    "build": "babel src -d build --ignore __tests__",
    "clean": "rm -rf build",
    "clean-build": "yarn run clean && yarn run build",
    "eslint": "eslint --fix \"src/**/*.js\"",
    "flow": "flow",
    "flow-typed-install": "flow-typed install -s -i dev",
    "heroku-postbuild": "yarn run clean-build",
    "precommit": "lint-staged",
    "prettier": "prettier --write \"src/**/*.js\"",
    "start": "node build/index.js",
    "start-server": "nodemon src/index.js --exec babel-node",
    "start-client": "yarn --cwd client run start",
    "start-dev": "concurrently \"yarn start-server\" \"yarn start-client\" --names \"Server,Client\" -c \"red,blue\"",
    "test": "jest --watch",
    "test-client": "yarn --cwd client run test"
  },
  "prettier": {
    "parser": "flow",
    "trailingComma": "all",
    "singleQuote": true,
    "tabWidth": 4
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "flow"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/client/"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
