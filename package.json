{
  "name": "emaily",
  "version": "1.0.0",
  "main": "src/index.js",
  "author": "cszatma <cs@christopherszatmary.com>",
  "private": true,
  "dependencies": {
    "body-parser": "^1.18.2",
    "chalk": "^2.4.0",
    "cookie-session": "^2.0.0-beta.3",
    "express": "^4.16.3",
    "mongoose": "^5.0.12",
    "passport": "^0.4.0",
    "passport-google-oauth20": "^1.0.0",
    "sendgrid": "^5.2.3",
    "stripe": "^5.8.0"
  },
  "devDependencies": {
    "@types/cookie-session": "^2.0.34",
    "@types/express": "^4.11.1",
    "@types/fs-extra": "^5.0.2",
    "@types/mongoose": "^5.0.10",
    "@types/node": "^10.0.0",
    "@types/passport": "^0.4.5",
    "@types/passport-google-oauth": "^1.0.38",
    "@types/stripe": "^5.0.10",
    "concurrently": "^3.5.1",
    "fs-extra": "^5.0.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "jest-supertest-cookie-fix": "^1.0.0",
    "lint-staged": "^7.0.4",
    "mockgoose": "^7.3.5",
    "nodemon": "^1.17.2",
    "npm-run-all": "^4.1.2",
    "passport-mock-strategy": "^1.0.0",
    "prettier": "^1.11.1",
    "superagent": "^3.8.2",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.4",
    "ts-node": "^6.0.2",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.12.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.8.3"
  },
  "engines": {
    "node": "8.11.1",
    "yarn": "1.6.0"
  },
  "scripts": {
    "build:server": "babel src -d build --ignore __tests__",
    "build:client": "yarn --cwd client run build",
    "build:old": "npm-run-all -s clean:* build:* move-client",
    "build": "node scripts build",
    "clean:server": "rm -rf build",
    "clean:client": "cd client && rm -rf build",
    "clean": "npm-run-all clean:*",
    "deploy": "git push heroku master",
    "heroku-postbuild": "npm-run-all -s build \"install:client --production\"",
    "install:client": "yarn --cwd client install",
    "lint": "tslint -c ./tslint.json -p ./tsconfig.json --fix",
    "move-client": "mv client/build build/client",
    "postinstall": "yarn run install:client",
    "precommit:server": "lint-staged",
    "precommit:client": "yarn --cwd client run precommit",
    "precommit": "npm-run-all precommit:*",
    "prettier:server": "prettier --write \"src/**/*.(js|jsx|ts|tsx)\"",
    "prettier:client": "yarn --cwd client run prettier",
    "prettier": "npm-run-all prettier:*",
    "start": "node build/index.js",
    "start-server": "nodemon src/index.ts --exec ts-node",
    "start-client": "yarn --cwd client run start",
    "start-dev": "concurrently \"yarn start-server\" \"yarn start-client\" --names \"Server,Client\" -c \"red,blue\"",
    "scripts": "node scripts",
    "test:server": "jest --watch",
    "test:client": "yarn --cwd client run test",
    "test": "npm-run-all test:*"
  },
  "prettier": {
    "parser": "typescript",
    "trailingComma": "all",
    "singleQuote": true,
    "tabWidth": 4
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "tslint -c ./tslint.json -p ./tsconfig.json --fix",
        "git add"
      ],
      "*.js": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "client/"
    ]
  }
}
