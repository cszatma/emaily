{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "client/",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "prettier": true,
    "no-console": false,
    "interface-name": [true, "never-prefix"]
  },
  "rulesDirectory": ["tslint-plugin-prettier"]
}
